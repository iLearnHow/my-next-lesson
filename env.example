# DailyLesson Foundry Environment Configuration

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Database Configuration (Cloudflare D1)
D1_DATABASE_ID=your_d1_database_id
D1_DATABASE_NAME=ilearn-production

# Storage Configuration (Cloudflare R2)
R2_BUCKET_NAME=ilearn-media-production
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key

# API Keys
HEYGEN_API_KEY=your_heygen_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Queue Configuration
WEBHOOK_QUEUE=video-generation-queue
ANALYTICS_QUEUE=analytics-processing-queue

# Application Configuration
NODE_ENV=production
API_VERSION=1.0.0
LOG_LEVEL=info
CORS_ORIGINS=https://dailylesson.org,https://mynextlesson.org,https://ilearn.how

# Development Configuration (for local testing)
NEXT_PUBLIC_API_URL=http://localhost:8787
NEXT_PUBLIC_APP_URL=http://localhost:3000 